<div class="card">
  <div class="card-header" role="tab" id="heading<%= incident['formatted_id'] %>">
    <h5 class="mb-0">
      <a data-toggle="collapse" data-parent="#<%= line['formatted_id'] %>_incidents" href="#<%= incident['formatted_id'] %>" aria-expanded="true" aria-controls="<%= incident['formatted_id'] %>">
        <%= incident['reason'] %>: <%= incident['title'] %>
      </a>
    </h5>
  </div>

  <div id="<%= incident['formatted_id'] %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= incident['formatted_id'] %>">
    <div class="card-block">
      <b>Posted at <%= incident['time'] %></b>
      <hr>
      <%= Nokogiri::HTML::DocumentFragment.parse(incident['description'].gsub(incident['title'], '')).to_html %>
    </div>
  </div>
</div>
